{
    "type": "object",
    "properties": {
        "sftpUrl": {
            "type": "string",
            "minLength": 1
        },
        "sftpUserName": {
            "type": "string",
            "minLength": 1
        },
        "sftpPassword": {
            "type": "string",
            "minLength": 1
        },
        "sftpDirectory": {
            "type": "string",
            "pattern": "^/.*/$"
        },
        "sftpDirectoryArchive": {
            "type": "string",
            "pattern": "^/.*/$"
        },
        "ovUrl": {
            "type": "string",
            "pattern": "^https://.*|^http://.*"
        },
        "ovAccessKey": {
            "type": "string",
            "minLength": 1
        },
        "ovSecretKey": {
            "type": "string",
            "minLength": 1
        },
        "regexpPatterns": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sftpFileNameRegexpPattern": {
                        "type": "string",
                        "minLength": 1
                    },
                    "ovTrackorType": {
                        "type": "string",
                        "minLength": 1
                    },
                    "ovTrackorFilters": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "searchTrigger": {
                                    "type": "string",
                                    "pattern": "^equal\\(|^(and|not|or) (not equal|equal)\\("
                                },
                                "valueTrigger": {
                                    "type": "object",
                                    "properties": {
                                        "regexpPattern": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "removePart": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    }
                                }
                            },
                            "required": ["searchTrigger"]
                        }
                    },
                    "ovEfileFieldName": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["sftpFileNameRegexpPattern", "ovTrackorType", "ovTrackorFilters", "ovEfileFieldName"]
            }
        }
    },
    "required": [
        "sftpUrl", "sftpUserName", "sftpPassword", "sftpDirectory", 
        "sftpDirectoryArchive", "ovUrl", "ovAccessKey",
        "ovSecretKey", "regexpPatterns"]
}