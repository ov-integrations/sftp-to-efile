{
    "type": "object",
    "properties": {
        "sftpUrl": {
            "type": "string",
            "minLength": 1
        },
        "sftpUserName": {
            "type": "string"
        },
        "sftpPassword": {
            "type": "string"
        },
        "sftpDirectory": {
            "type": "string",
            "pattern": "^/.*/$"
        },
        "sftpDirectoryArchive": {
            "type": "string",
            "pattern": "^/.*/$"
        },
        "sftpNumberOfDaysToDeleteFromArchive": {
            "type": "number"
        },
        "ovUrl": {
            "type": "string",
            "pattern": "^https://.*|^http://.*"
        },
        "ovAccessKey": {
            "type": "string"
        },
        "ovSecretKey": {
            "type": "string"
        },
        "sftpFileToOvMappings": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sftpFileNameRegexp": {
                        "type": "string"
                    },
                    "ovTrackorType": {
                        "type": "string"
                    },
                    "ovEfileFieldName": {
                        "type": "string"
                    },
                    "ovTrackorFilter": {
                        "type": "object",
                        "properties": {
                            "searchConditions": {
                                "type": "string"
                            },
                            "searchConditionsParams": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "paramName": {
                                            "type": "string",
                                            "minLength": 1
                                        },
                                        "paramValueRegexp": {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    }
                                }
                            }
                        },
                        "required": ["searchConditions"]
                    }
                },
                "required": ["sftpFileNameRegexp", "ovTrackorType", "ovEfileFieldName", "ovTrackorFilter"]
            }
        }
    },
    "required": [
        "sftpUrl", "sftpUserName", "sftpPassword", "sftpDirectory", 
        "sftpDirectoryArchive", "ovUrl", "ovAccessKey",
        "ovSecretKey", "sftpFileToOvMappings"]
}